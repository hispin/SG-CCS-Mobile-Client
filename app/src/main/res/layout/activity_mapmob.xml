<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MapmobActivity">

    <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            mapbox:mapbox_cameraBearing="34.33"
            mapbox:mapbox_cameraTargetLat="32.941484"
            mapbox:mapbox_cameraTargetLng="35.795603"
            mapbox:mapbox_cameraTilt="50.25"
            mapbox:mapbox_cameraZoom="16"
            mapbox:mapbox_cameraZoomMax="18"
            mapbox:mapbox_cameraZoomMin="6"
            mapbox:mapbox_uiRotateGestures="false" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDownloadMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="download Maps"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>