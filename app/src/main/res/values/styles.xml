<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="zone_title" parent="marquee">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="marquee">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
    </style>


    <!--style of tab layout-->
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget" >
        <item name="tabBackground">@color/turquoise</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <!--For list of popup menu -->
    <style name="winPopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_down</item>
    </style>

    <!--style of text of tab layout-->
    <style name="TabLayoutTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">11.7sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>


    <!--for content of menu of configuration screen-->
    <style name="configContentItem">
        <item name="android:textSize">13.3sp</item>
        <item name="android:textColor">@color/dark2</item>
        <item name="android:layout_marginStart">64.7dp</item>
    </style>

    <style name="etEmailSetting">
        <item name="layout_constraintWidth_percent">0.520</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="edit_sensor_fields">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14.7sp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="emailAccountStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">14</item>


    </style>

</resources>
